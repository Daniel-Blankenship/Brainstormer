<Page x:Class="Brainstormer.IdeaTournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Brainstormer"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="1024"
      Height="576" Width="1024"
      Title="IdeaTournamentPage"
      Background="GhostWhite">

    <Grid>
        <Button Name="StartTournamentButton" Content="Start Tournament" HorizontalAlignment="Left" Margin="60,70,0,0" VerticalAlignment="Top" Width="102" Height="29" Click="StartTournament_Click"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="10,378,0,0" Stroke="Black" VerticalAlignment="Top" Width="256"/>
        <Label Content="Admin / Developer Options" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" Width="166"/>
        <Button Name="StartDemoButton" Content="Start Demo" HorizontalAlignment="Left" Margin="24,417,0,0" VerticalAlignment="Top" Width="80" Click="StartDemo_Click"/>

        <ListBox Name="IdeaViewerBox" HorizontalAlignment="Left" Height="240" Margin="297,70,0,0" VerticalAlignment="Top" Width="431" ItemsSource="{Binding Idea}" FontWeight="Bold">
            <ListBox.Resources>
                <Style TargetType="ListBoxItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Votes}" Value="0">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Votes}" Value="1">
                            <Setter Property="Background" Value="Yellow"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Votes}" Value="2">
                            <Setter Property="Background" Value="SpringGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Votes}" Value="3">
                            <Setter Property="Background" Value="SpringGreen"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Resources>
        </ListBox>



        <Label Name="RoundLabel" Content="Round #" HorizontalAlignment="Left" Margin="297,39,0,0" VerticalAlignment="Top" Width="138"/>
        <Label Name="InfoLabel" Content="Click Start Tournament to begin a new tournament" HorizontalAlignment="Left" Margin="297,315,0,0" VerticalAlignment="Top" Width="431"/>
        <Label Name="VotesLeftLabel" Content=" " HorizontalAlignment="Left" Margin="128,285,0,0" VerticalAlignment="Top" Width="138"/>
        <TextBlock Name="DemoDisplay" HorizontalAlignment="Left" Margin="297,357,0,0" VerticalAlignment="Top" Width="637" Height="121" FontSize="36" TextWrapping="Wrap"/>
        <Label Name="VotePercentLabel" Content="Percent of votes in" HorizontalAlignment="Left" Margin="465,39,0,0" VerticalAlignment="Top" Width="146"/>

    </Grid>
</Page>
