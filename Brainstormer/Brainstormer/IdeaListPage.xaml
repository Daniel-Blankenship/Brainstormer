<Page x:Class="Brainstormer.IdeaListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Brainstormer"
      mc:Ignorable="d" 
      d:DesignHeight="576" d:DesignWidth="1024"
      Height="576" Width="1024"
      Title="IdeaListPage"
      Background="GhostWhite">

    <Grid>

        <ListBox Name="IdeaViewerBox" Margin="10,10,758,70" ItemsSource="{Binding Idea}" FontWeight="Bold" SelectionChanged="IdeaViewerBox_SelectionChanged" />
        <TextBlock Name="IdeaDisplay" Margin="319,27,68,365" FontSize="20" TextWrapping="Wrap"/>

    </Grid>
</Page>
